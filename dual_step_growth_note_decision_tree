// Dual-Step Growth Note
digraph {
	A [label="Start
Initial Investment $10,000"]
	B [label="Index <= -20%?
Capital Protection Threshold"]
	C [label="Principal Reduction
Proportional to >20% loss"]
	D [label="Index > -20%"]
	E [label="Index Rise"]
	F [label="Participation in Upside
50% of Index Gain, up to 20% Cap"]
	G [label="No Participation
Principal Returned"]
	A -> B
	B -> D
	B -> C [label=Yes]
	B -> D [label=No]
	D -> E [label="Index Rises"]
	E -> F [label="Calculate Gain"]
	D -> G [label="Index Does Not Rise"]
}
